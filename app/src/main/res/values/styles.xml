<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Estilo para imagen circular -->
    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Tema base de la aplicaciÃ³n -->
    <style name="Theme.MyApp" parent="Theme.Material3.DayNight">
        <!-- Colores primarios -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorPrimaryContainer">@color/primary_container</item>
        <item name="colorOnPrimaryContainer">@color/on_primary_container</item>

        <!-- Colores de superficie -->
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="colorSurfaceVariant">@color/surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/on_surface_variant</item>
        <item name="colorSurfaceContainer">@color/surface_container</item>

        <!-- Colores de outline -->
        <item name="colorOutline">@color/outline</item>
        <item name="colorOutlineVariant">@color/outline_variant</item>

        <!-- Fuente -->
        <item name="fontFamily">@font/roboto</item>
    </style>

    <!-- Estilo para botones de iconos -->
    <style name="Widget.MyApp.Button.IconButton" parent="Widget.Material3.Button.IconButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">?attr/colorOnSurface</item>
    </style>

</resources>